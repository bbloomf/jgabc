<?xml version='1.0' encoding='utf-8'?>
<widget id="io.github.bbloomf.jgabc" version="1.9.63" xmlns="http://www.w3.org/ns/widgets" xmlns:android="http://schemas.android.com/apk/res/android" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Chant Tools</name>
    <description>
        GABC Chant Tools available at http://bbloomf.github.io/jgabc/
    </description>
    <author email="bhb123+jgabc@gmail.com" href="http://github.com/bbloomf">
        Benjamin Bloomfield
    </author>
    <content src="propers.html" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/mipmap-ldpi/icon.png" />
        <icon density="mdpi" src="res/mipmap-mdpi/icon.png" />
        <icon density="hdpi" src="res/mipmap-hdpi/icon.png" />
        <icon density="xhdpi" src="res/mipmap-xhdpi/icon.png" />
        <icon density="xxhdpi" src="res/mipmap-xxhdpi/icon.png" />
        <icon density="xxxhdpi" src="res/mipmap-xxxhdpi/icon.png" />
        <preference name="AndroidLaunchMode" value="singleTask" />
        <preference name="android-targetSdkVersion" value="35" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/screen/android/splashscreen.xml" />
        <preference name="SplashScreenBackgroundColor" value="#ffffff" />
        <preference name="AndroidWindowSplashScreenAnimationDuration" value="0" />
        <config-file parent="/*/application/activity" target="AndroidManifest.xml">
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:host="bbloomf.github.io" android:pathPrefix="/jgabc" />
                <data android:scheme="http" />
                <data android:scheme="https" />
            </intent-filter>
        </config-file>
        <!-- <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application/activity">
            <activity android:exported="true"/>
        </edit-config> -->
        <!-- <edit-config file="app/src/main/AndroidManifest.xml" mode="merge" target="/manifest/application/receiver[@android:name='nl.xservices.plugins.ShareChooserPendingIntent']">
            <activity android:exported="true"/>
        </edit-config> -->
    </platform>
    <platform name="ios">
        <preference name="scheme" value="app" />
        <preference name="hostname" value="localhost" />
        <splash src="res/screen/ios/Default@2x~universal~anyany.png" />
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="20" src="res/ios/Icon-App-20x20@1x.png" width="20" />
        <icon height="40" src="res/ios/Icon-App-20x20@2x.png" width="40" />
        <icon height="60" src="res/ios/Icon-App-20x20@3x.png" width="60" />
        <icon height="29" src="res/ios/Icon-App-29x29@1x.png" width="29" />
        <icon height="58" src="res/ios/Icon-App-29x29@2x.png" width="58" />
        <icon height="87" src="res/ios/Icon-App-29x29@3x.png" width="87" />
        <icon height="40" src="res/ios/Icon-App-40x40@1x.png" width="40" />
        <icon height="80" src="res/ios/Icon-App-40x40@2x.png" width="80" />
        <icon height="120" src="res/ios/Icon-App-40x40@3x.png" width="120" />
        <icon height="57" src="res/ios/Icon-App-57x57@1x.png" width="57" />
        <icon height="114" src="res/ios/Icon-App-57x57@2x.png" width="114" />
        <icon height="60" src="res/ios/Icon-App-60x60@1x.png" width="60" />
        <icon height="120" src="res/ios/Icon-App-60x60@2x.png" width="120" />
        <icon height="180" src="res/ios/Icon-App-60x60@3x.png" width="180" />
        <icon height="72" src="res/ios/Icon-App-72x72@1x.png" width="72" />
        <icon height="144" src="res/ios/Icon-App-72x72@2x.png" width="144" />
        <icon height="76" src="res/ios/Icon-App-76x76@1x.png" width="76" />
        <icon height="152" src="res/ios/Icon-App-76x76@2x.png" width="152" />
        <icon height="228" src="res/ios/Icon-App-76x76@3x.png" width="228" />
        <icon height="167" src="res/ios/Icon-App-83.5x83.5@2x.png" width="167" />
        <icon height="50" src="res/ios/Icon-Small-50x50@1x.png" width="50" />
        <icon height="100" src="res/ios/Icon-Small-50x50@2x.png" width="100" />
